{
  "name": "sapper-typescript-esbuild",
  "description": "sapper-typescript-esbuild",
  "version": "0.0.1",
  "author": "Tom Bazarnik <tommywalkie@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "run-p watch-ts sapper:dev watch-svelte",
    "build": "npm run type-check && sapper build",
    "export": "npm run type-check && sapper export",
    "start": "node __sapper__/build",
    "sapper:dev": "sapper dev --port 4000",
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "watch-ts": "chokidar \"src/**/*.ts\" --silent -c \"tsc --noEmit -p ./tsconfig.json\"",
    "watch-svelte": "svelte-check --ignore src/node_modules --output human --watch",
    "type-check": "tsc --noEmit -p ./tsconfig.json && svelte-check --ignore src/node_modules --output human"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "^0.5.0",
    "sirv": "^1.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@cush/rollup-plugin-esbuild": "2.5.2-canary.138",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@rollup/plugin-replace": "^2.3.3",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^1.0.10",
    "@types/compression": "^1.7.0",
    "@types/jest": "^26.0.20",
    "@types/polka": "^0.5.1",
    "autoprefixer": "^10.2.5",
    "babel-jest": "^26.6.3",
    "chokidar-cli": "^2.1.0",
    "esbuild": "0.6.33",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "postcss-load-config": "^3.0.1",
    "rollup": "^2.13.1",
    "rollup-plugin-esbuild": "2.4.2",
    "rollup-plugin-svelte": "^6.0.0",
    "sapper": "0.28.6",
    "svelte": "3.24.1",
    "svelte-check": "^1.0.41",
    "svelte-jester": "^1.3.0",
    "svelte-preprocess": "^4.2.1",
    "tailwindcss": "^2.0.3",
    "ts-jest": "^26.5.3",
    "typescript": "^4.1.2"
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
