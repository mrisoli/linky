{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": ["src/**/*", "./jest.config.ts"],
    "exclude": [
        "node_modules/**/*",
        "__sapper__/**/*",
        "public/**/*",
        "**/*.test.ts"
    ],
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "lib": ["DOM", "WebWorker"],
        "types": ["svelte", "node", "sapper/runtime", "jest"],
        "typeRoots": [ "./node_modules/@types" ]
    }
}
